{
  "buildCommand": "npm run build",
  "outputDirectory": "out",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "redirects": [
    {
      "source": "/compare",
      "destination": "/compare.html",
      "permanent": true
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=0, s-maxage=86400, stale-while-revalidate"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self'; style-src 'self';"
        }
      ]
    }
  ],
  "functions": {
    "api/openai.js": {
      "runtime": "vercel-node@1.16.0",
      "maxDuration": 10,
      "memory": 512
    }
  }
}
