{
    "redirects": [
        {
            "source": "/compare",
            "destination": "/compare.html",
            "permanent": true
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        }
    ],
    "functions": {
        "api/openai.js": {
            "runtime": "nodejs18.x",
            "memory": 128,
            "maxDuration": 10
        }
    },
    "build": {
        "env": {
            "NODE_ENV": "production"
        }
    },
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        }
    ]
}
