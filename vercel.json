{
  "functions": {
      "api/openai.js": {
          "runtime": "nodejs18.x"
      }
  },
  "cleanUrls": true,
  "rewrites": [
      {
          "source": "/api/(.*)",
          "destination": "/api/$1"
      },
      {
          "source": "/(.*)",
          "destination": "/index.html"
      }
  ]
}
